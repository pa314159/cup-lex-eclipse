	<groupId>net.sf.cup-lex-eclipse</groupId>
	<artifactId>pi.eclipse.cle</artifactId>

	<description>CLE Eclipse Plugin</description>

	<build>
		<resources>
			<resource>
				<directory>.</directory>
				<includes>
					<include>plugin.*</include>
					<include>doc/**</include>
					<include>icons/**</include>
					<include>lib/**</include>
					<include>META-INF/MANIFEST.MF</include>
				</includes>
			</resource>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>lib</outputDirectory>
							<excludeGroupIds>org.eclipse</excludeGroupIds>
							<excludeScope>provided</excludeScope>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>net.sf.cup-lex-eclipse</groupId>
				<artifactId>cup-lex-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<id>cup-lex</id>
						<goals>
							<goal>cup</goal>
							<goal>lex</goal>
						</goals>
						<configuration>
							<sourceDirectory>${basedir}/etc</sourceDirectory>
							<cup>
								<symbolsSuffix>Sym</symbolsSuffix>
							</cup>
						</configuration>
					</execution>
					<execution>
						<id>version</id>
						<goals>
							<goal>update-version</goal>
						</goals>
						<configuration>
							<includes>
								<include>META-INF/MANIFEST.MF</include>
							</includes>
							<replace>0.1.2.3-VERSIONSUFFIX</replace>
							<with>${project.version}-${version-suffix}</with>
							<property>plugin-version</property>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>build/classes/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
